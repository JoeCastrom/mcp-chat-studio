{
  "name": "mcp-chat-studio",
  "version": "1.5.0",
  "description": "A powerful MCP testing and development tool with multi-provider LLM support",
  "main": "server/index.js",
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "testing",
    "development",
    "tools",
    "chat"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeCastrom/mcp-chat-studio.git"
  },
  "license": "MIT",
  "author": {
    "name": "Youssef Ghazi",
    "url": "https://github.com/JoeCastrom"
  },
  "bin": {
    "mcp-cli": "./cli/index.js",
    "mcp-test": "./cli/mcp-test.js"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:e2e": "npx playwright test",
    "test:cli": "node cli/index.js",
    "healthcheck": "node scripts/healthcheck.js",
    "perf:budget": "node scripts/perf-budget.js",
    "lint": "eslint server/**/*.js",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dompurify": "^3.1.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "js-yaml": "^4.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.0",
    "vm2": "^3.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.7.4"
  }
}
